{
    "diagnostic.virtualText": true,
    "diagnostic.autoRefresh": true,
    "diagnostic.infoSign": "",
    "diagnostic.errorSign": "",
    "diagnostic.hintSign": "",
    "diagnostic.warningSign": "",
    "diagnostic.messageTarget": "echo",
    "signature.enable": true,
    "suggest.autoTrigger": "always",
    "suggest.enablePreview": true,
    "suggest.floatConfig": {
        "border": true,
        "rounded": true
    },
    "suggest.languageSourcePriority": 99,
    "suggest.completionItemKindLabels": {
        "keyword": "",
        "variable": "",
        "value": "",
        "operator": "",
        "function": "",
        "reference": "",
        "constant": "",
        "method": "",
        "struct": "פּ",
        "class": "ﴯ",
        "interface": "",
        "text": "",
        "enum": "",
        "enumMember": "",
        "module": "",
        "color": "",
        "property": "ﰠ",
        "field": "ﰠ",
        "unit": "塞",
        "event": "",
        "file": "",
        "folder": "",
        "snippet": "",
        "typeParameter": "\uf728",
        "default": "\uf29c"
    },
    "coc.preferences.formatOnType": true,
    "coc.preferences.echodocSupport": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "python",
        "markdown",
        "json",
        "csv",
        "cpp"
    ],
    //python
    "pyright.enable": true,
    "python.linting.enabled": true,
    "pyright.disableDiagnostics": false,
    "python.linting.pylintEnabled": true,
    "python.pythonPath": "~/.vim/plugged/coc.nvim/python",
    //markdown
    "markdownlint.onOpen": true,
    "markdownlint.onChange": true,
    "markdownlint.onSave": true,
    "markdownlint.config": {
        "default": true,
        "line_length": false,
        "MD033": {
            "allowed_elements": [
                "nobr",
                "sup",
                "u"
            ]
        }
    },
    "clangd.enabled": true,
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.3/clangd_14.0.3/bin/clangd"
}
